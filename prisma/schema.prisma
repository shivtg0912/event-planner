
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  events    Event[]
}

model Event {
  id          Int       @id @default(autoincrement())
  eventName   String
  eventType   EventType
  eventDate   DateTime
  eventTime   DateTime
  location    String
  description String?
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}

enum EventType {
  CONFERENCE
  WORKSHOP
  MEETING
  SOCIAL
  OTHER
}
